<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingStart="0dp"
        android:paddingEnd="5dp"
        android:theme="@style/Theme.QuoteUnquote">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="0dp"
                android:paddingEnd="10dp"
                android:text="@string/fragment_archive_title"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:textSize="22sp"
                android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:paddingTop="0dp"
                android:paddingBottom="4dp"
                android:paddingStart="0dp"
                android:paddingEnd="5dp"
                android:text="@string/fragment_archive_instructions_1"
                android:textSize="14sp"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingStart="0dp"
                android:paddingEnd="5dp"
                android:text="@string/fragment_archive_instructions_2"
                android:textSize="14sp"/>

        <RadioGroup
                android:id="@+id/radioGroupArchive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        <RadioButton
                android:id="@+id/radioButtonCloud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_archive_cloud_24"
                android:drawablePadding="20dp"
                android:paddingVertical="10dp"
                android:paddingStart="12dp"
                android:paddingEnd="0dp"
                android:text="@string/fragment_archive_select_cloud"
                android:textSize="14sp" />

        <RadioButton
                android:id="@+id/radioButtonSharedStorage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_archive_folder_24"
                android:drawablePadding="20dp"
                android:paddingVertical="10dp"
                android:paddingStart="12dp"
                android:paddingEnd="0dp"
                android:text="@string/fragment_archive_select_filesystem"
                android:textSize="14sp" />

        </RadioGroup>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="0dp"
                android:paddingTop="10dp"
                android:paddingEnd="0dp"
                android:paddingBottom="15dp">

            <TextView
                    android:id="@+id/textViewLocalCodeValue"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:paddingVertical="10dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="48dp"
                    android:text="@string/fragment_archive_backup_local_code_value"
                    android:textIsSelectable="true"
                    android:textSize="18sp" />

            <Button
                    android:id="@+id/buttonBackup"
                    android:layout_width="110dp"
                    android:layout_height="48dp"
                    android:background="@drawable/corners_buttons"
                    android:text="@string/fragment_archive_backup"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    app:backgroundTint="@null" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingVertical="5dp"
                android:paddingStart="0dp"
                android:paddingEnd="0dp">

            <EditText
                    android:id="@+id/editTextRemoteCodeValue"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:importantForAutofill="no"
                    android:inputType="textPersonName"
                    android:maxLength="10"
                    android:minHeight="48dp"
                    android:textSize="18sp"
                    tools:ignore="TextContrastCheck" />

            <Button
                    android:id="@+id/buttonRestore"
                    android:layout_width="110dp"
                    android:layout_height="48dp"
                    android:background="@drawable/corners_buttons"
                    android:text="@string/fragment_archive_restore"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    app:backgroundTint="@null" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
